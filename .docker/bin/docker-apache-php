#!/bin/sh

eval "$(grep ^APACHE_PHP_CONTAINER_NAME= .docker/.env)"
eval "$(grep ^APACHE_PHP_ROOT_DIR= .docker/.env)"

if [ $# -eq 0 ]; then
    sudo docker exec -it -w $APACHE_PHP_ROOT_DIR $APACHE_PHP_CONTAINER_NAME bash
else
    sudo docker exec -w $APACHE_PHP_ROOT_DIR $APACHE_PHP_CONTAINER_NAME bash -c "$*"
fi
