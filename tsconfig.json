{
  "compilerOptions": {
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "module": "es6",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "lib": [
    "es6",
    "dom"
  ],
  "include": [
    "assets/js/*.ts",
    "assets/js/**/*.ts",
    "assets/js/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
