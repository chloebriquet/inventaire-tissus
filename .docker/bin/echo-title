#!/bin/sh

RED='\033[91m'
BLUE='\033[94m'
RESET='\033[0m'

printf "\n${RED}****************************************************************\n"
printf "   $1\n"

if [ $# -eq 2 ]; then
    printf "\n   ${BLUE}=> $2\n"
fi

printf "${RED}****************************************************************${RESET}\n\n"
